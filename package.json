{
  "name": "matanuska",
  "version": "0.0.1",
  "description": "A chill BASIC to shell to",
  "type": "module",
  "main": "dist/index.mjs",
  "bin": {
    "matbas": "bin/matbas"
  },
  "scripts": {
    "install:citree": "cd tools/citree && npm install",
    "install:test-generator": "cd tools/test-generator && npm install",
    "build:config": "grabthar config",
    "build": "concurrently 'npm run build:templates' 'npm run build:ast' && npm run build:vite",
    "build:release": "dotenv -e release.env -- npm run build",
    "build:constants": "dotenv -- ./scripts/constants.sh",
    "build:debug": "dotenv -- ./scripts/debug.sh",
    "build:templates": "concurrently 'npm run build:constants' 'npm run build:debug'",
    "build:vite": "vite build",
    "build:citree": "cp ast/index.citree tools/citree/example/ast.citree && cd tools/citree && npm run build && npm run snap",
    "build:test-generator": "cd tools/test-generator && npm run build",
    "build:ast": "citree ast/index.citree",
    "build:test": "npm run build:test-generator && dotenv -e test.env -- test-generator ./test",
    "build:test:activate": "dotenv -e test.env -- test-generator --activate ./test",
    "check": "dotenv -e test.env -- concurrently 'npm run build:templates' 'npm run build:ast' 'npm run build:config' && tsc --noEmit",
    "format": "npm run build:config && prettier --write .",
    "start": "npm run build && PATH=\"${PATH}:$(pwd)/bin\" bin/matbas",
    "lint": "dotenv -e test.env -- concurrently 'npm run build:templates' 'npm run build:config' && prettier --list-different . && eslint --fix \"**.ts\" \"**.mjs\"",
    "lint:shell": "shellcheck ./bin/* ./scripts/*.sh ./.husky/pre-commit",
    "lint:staged": "lint-staged",
    "test": "dotenv -e test.env -- npm run build:templates && dotenv -e test.env -- vitest --run",
    "test:env": "dotenv -e test.env -- ./scripts/test-env.sh",
    "test:citree": "cd tools/citree && npm test",
    "snap": "dotenv -e test.env -- npm run build:templates && dotenv -e test.env -- vitest --run --update",
    "console": "npm run build && ts-node",
    "prepare": "husky",
    "linecount": "./scripts/linecount.sh",
    "wordcount": "./scripts/wordcount.sh",
    "bundle-size": "./scripts/bundle-size.sh",
    "clean": "rm -rf ./dist"
  },
  "keywords": [
    "basic",
    "shell",
    "language",
    "interpreter"
  ],
  "author": "Josh Holbrook",
  "license": "MIT",
  "engines": {
    "node": "^20.17.0 || ^22.8.0"
  },
  "dependencies": {
    "@jfhbrook/citree": "file:tools/citree",
    "@jfhbrook/grabthar": "file:tools/grabthar",
    "@matanuska/test-generator": "file:tools/test-generator",
    "@nestjs/common": "^10.4.1",
    "@nestjs/core": "^10.4.1",
    "@types/text-table": "^0.2.5",
    "ansi-colors": "^4.1.3",
    "dotenv": "^16.4.5",
    "reflect-metadata": "^0.2.2",
    "strftime": "^0.10.2",
    "text-table": "^0.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@jfhbrook/swears": "^1.0.2",
    "@nestjs/testing": "^10.3.10",
    "@types/strftime": "^0.9.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^2.1.2",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "exercise-bike": "^2.1.0",
    "globals": "^15.10.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.0.0",
    "rollup-plugin-esbuild-minify": "^1.1.2",
    "source-map-support": "^0.5.21",
    "strip-ansi": "^7.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.2",
    "typescript-eslint": "^8.8.0",
    "unplugin-swc": "^1.5.1",
    "vite": "^5.4.8",
    "vitest": "^2.1.2"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.24.0",
    "@swc/core-linux-x64-gnu": "^1.7.30-nightly-20241002.1"
  }
}
