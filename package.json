{
  "name": "matanuska",
  "version": "0.0.1",
  "description": "a shell-friendly dialect of BASIC",
  "main": "index.js",
  "bin": {
    "matbas": "dist/main.js"
  },
  "scripts": {
    "build": "npm run build:version && concurrently 'npm run build:typescript' 'npm run build:assets'",
    "build:version": "node -pe '`export const VERSION = \"${require(\"./package.json\").version}\";`' > version.ts",
    "build:typescript": "tsc",
    "build:assets": "cp -r test/vcr dist/test/vcr",
    "format": "prettier --write \"**/*.ts\"",
    "start": "npm run build && node dist/main.js",
    "lint": "eslint \"**.ts\" --fix",
    "test": "npm run build && tap ./dist/test/*.js",
    "console": "npm run build && cd dist && ts-node"
  },
  "keywords": [
    "basic",
    "shell",
    "language",
    "interpreter"
  ],
  "author": "Josh Holbrook",
  "license": "MIT",
  "dependencies": {
    "typescript-parsec": "^0.3.4"
  },
  "devDependencies": {
    "@jfhbrook/swears": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "tap": "^18.6.1",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
