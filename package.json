{
  "name": "matanuska",
  "version": "0.0.1",
  "description": "A chill BASIC to shell to",
  "main": "dist/index.js",
  "bin": {
    "matbas": "bin/matbas"
  },
  "scripts": {
    "install:citree": "cd tools/citree && npm install",
    "install:test-generator": "cd tools/test-generator && npm install",
    "build": "concurrently 'npm run build:templates' 'npm run build:ast' && npm run build:typescript",
    "build:release": "dotenv -e release.env -- npm run build",
    "build:constants": "dotenv -- ./scripts/constants.sh",
    "build:debug": "dotenv -- ./scripts/debug.sh",
    "build:templates": "concurrently 'npm run build:constants' 'npm run build:debug'",
    "build:typescript": "nest build",
    "build:citree": "cp ast/index.citree tools/citree/example/ast.citree && cd tools/citree && npm run build",
    "build:test-generator": "cd tools/test-generator && npm run build",
    "build:ast": "citree ast/index.citree",
    "build:test": "npm run build:test-generator && dotenv -e test.env -- test-generator ./test",
    "build:test:activate": "dotenv -e test.env -- test-generator --activate ./test",
    "check": "dotenv -e test.env -- concurrently 'npm run build:templates' 'npm run build:ast' && tsc --noEmit",
    "format": "prettier --write \"**/*.ts\"",
    "start": "npm run build && PATH=\"${PATH}:$(pwd)/bin\" bin/matbas",
    "lint": "dotenv -e test.env -- npm run build && prettier --list-different \"**.ts\" && eslint --fix \"**.ts\"",
    "lint:shell": "shellcheck ./bin/* ./scripts/* ./.husky/pre-commit",
    "lint:staged": "lint-staged",
    "test": "dotenv -e test.env -- npm run build:templates && dotenv -e test.env -- tap ./test",
    "test:citree": "cd tools/citree && npm test",
    "snap": "dotenv -e test.env -- npm run build:templates && dotenv -e test.env -- tap ./test --snapshot",
    "console": "npm run build && ts-node",
    "prepare": "husky",
    "linecount": "./scripts/linecount.sh",
    "wordcount": "./scripts/wordcount.sh",
    "clean": "rm -rf ./dist"
  },
  "keywords": [
    "basic",
    "shell",
    "language",
    "interpreter"
  ],
  "author": "Josh Holbrook",
  "license": "MIT",
  "dependencies": {
    "@jfhbrook/citree": "file:tools/citree",
    "@matanuska/test-generator": "file:tools/test-generator",
    "@nestjs/common": "^10.3.10",
    "@nestjs/core": "^10.3.10",
    "@types/text-table": "^0.2.5",
    "ansi-colors": "^4.1.3",
    "dotenv": "^16.4.5",
    "reflect-metadata": "^0.2.2",
    "strftime": "^0.10.2",
    "text-table": "^0.2.0"
  },
  "devDependencies": {
    "@jfhbrook/swears": "^1.0.2",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/testing": "^10.3.10",
    "@types/strftime": "^0.9.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "exercise-bike": "^2.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "tap": "^20.0.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.2"
  }
}
