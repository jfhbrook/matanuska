{
  "name": "matanuska",
  "version": "0.0.1",
  "description": "a shell-friendly dialect of BASIC",
  "main": "index.js",
  "bin": {
    "matbas": "bin/matbas"
  },
  "scripts": {
    "build": "concurrently 'npm run build:versions' 'npm run build:ast' && npm run build:typescript",
    "build:versions": "bash ./scripts/versions.sh",
    "build:typescript": "tsc -p tsconfig.build.json",
    "build:citree": "cd tools/citree && npm run build",
    "build:ast": "citree ast/ast.citree",
    "check": "concurrently 'npm run build:versions' 'npm run build:ast' && tsc --noEmit",
    "format": "prettier --write \"**/*.ts\"",
    "start": "npm run build && PATH=\"${PATH}:$(pwd)/bin\" bin/matbas",
    "lint": "eslint \"**.ts\" --fix",
    "test": "npm run build:versions && tap ./test/*.ts",
    "snap": "npm run build:versions && npm run format && tap ./test/*.ts --snapshot",
    "console": "npm run build && ts-node"
  },
  "keywords": [
    "basic",
    "shell",
    "language",
    "interpreter"
  ],
  "author": "Josh Holbrook",
  "license": "MIT",
  "dependencies": {
    "@jfhbrook/citree": "file:tools/citree",
    "dotenv": "^16.4.5",
    "strftime": "^0.10.2",
    "typescript-parsec": "^0.3.4"
  },
  "devDependencies": {
    "@jfhbrook/swears": "^1.0.2",
    "@types/strftime": "^0.9.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "exercise-bike": "^2.0.1",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "tap": "^18.6.1",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
