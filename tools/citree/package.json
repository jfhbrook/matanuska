{
  "name": "@jfhbrook/citree",
  "version": "1.0.2",
  "description": "A DSL for generating ASTs in TypeScript",
  "main": "dist/index.js",
  "bin": {
    "citree": "dist/main.js"
  },
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "build": "concurrently 'npm run build:templates' 'npm run build:typescript' && chmod +x dist/main.js",
    "build:templates": "mkdir -p dist/templates && cp -r src/templates/*.njk dist/templates",
    "build:typescript": "tsc -p tsconfig.build.json",
    "build:readme": "tap ./test/int.ts && bash ./scripts/readme.sh",
    "start": "npm run build && node --enable-source-maps ./dist/main.js",
    "test": "npm run build && tap ./test/*.ts",
    "snap": "npm run build && tap ./test/*.ts --snapshot",
    "lint": "eslint \"src/**.ts\" --fix",
    "lint:shell": "shellcheck ./scripts/*",
    "check": "tsc --noEmit",
    "console": "npm run build && ts-node",
    "prepublishOnly": "npm run build && npm run build:readme"
  },
  "keywords": [
    "ast",
    "parser",
    "scanner",
    "lexer"
  ],
  "author": "Josh Holbrook",
  "license": "MIT",
  "dependencies": {
    "minimist": "^1.2.8",
    "nunjucks": "^3.2.4",
    "typescript-parsec": "^0.3.4",
    "which": "^4.0.0"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.5",
    "@types/nunjucks": "^3.2.6",
    "@types/which": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "tap": "^18.6.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  }
}
